
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Product[] searchResult = ViewData["searchResult"] as Product[];
}
<div>
    <span>Find @searchResult.Length products. </span> 
    <span>Searched with: </span>
    <span class="badge badge-info">@ViewData["query"]</span>
</div>
<hr class="bg-info border-info border">
<div class="container">
    <div class="row">
        @foreach (Product product in searchResult)
        {
        <div class="col-md-3 col-sm-6">
            @await Html.PartialAsync("_productCardPartial", product)
        </div>
         }
    </div>
 </div>

