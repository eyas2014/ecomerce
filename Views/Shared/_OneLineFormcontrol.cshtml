@model OneLineFormcontrol;
@using myEcomerce.Views.Shared;

<div class="form-group">
    <div class="input-group input-group-sm">
        <div class="col-md-4">
        <label for="user_firstname">@Model.label</label>:
        </div>
        @if (Model.icon != null)
        {
            <div class="input-group-prepend ml-2">
                <div class="input-group-text text-white  border border-secondary bg-secondary">
                    @if (Model.icon.Substring(0, 2) == "oi")
                    {
                        <small class="@Model.icon"></small>
                    }
                    else if (Model.icon.Substring(0, 2) == "fa")
                    {
                        <i class="@Model.icon"></i>
                    }
                </div>
            </div>
        }
        <input type="text" class="form-control border border-secondary" name="@Model.name">
    </div>
</div>

